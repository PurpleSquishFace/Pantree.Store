@model StoreAdd

    <div id="LocationAddStore" class="viewLocation-partial active">

        <form asp-controller="Storage" asp-action="AddStore" class="load-partial" attr-partial="storageSection" method="post">

            <h3>Add Store</h3>

            <input asp-for="LocationID" type="hidden" />

            <div class="form-input-container">
                <label asp-for="StoreName"></label>
                <div class="input-container">
                    <input asp-for="StoreName" />
                </div>
                <span asp-validation-for="StoreName"></span>
            </div>

            <div class="form-input-container">
                <label asp-for="StoreDescription"></label>
                <div class="input-container">
                    <input asp-for="StoreDescription" />
                </div>
                <span asp-validation-for="StoreDescription"></span>
            </div>

            <div class="btn-tray btn-tray-center">
                <div class="btn btn-save btn-form">
                    <i class="fas fa-check"></i><div class="btn-text">Add</div>
                </div>
                <div class="loading-icon">
                    <i class="fas fa-spinner fa-2x fa-spin"></i>
                </div>
            </div>

        </form>
    </div>
